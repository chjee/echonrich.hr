{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "lib": [
      "es5",
      "es6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "module": "commonjs",
    //"module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true
  },
  "include": [ "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
}